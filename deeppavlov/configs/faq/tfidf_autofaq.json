{
  "dataset_reader": {
    "name": "faq_reader",
    "data_path": "/home/andrey/Projects/autoFAQ/data/train_faq.csv"
  },
  "dataset_iterator": {
    "name": "data_learning_iterator"
  },

  "chainer": {
    "in": "q",
    "pipe": [
      {
        "name": "ru_tokenizer",
        "in": "q",
        "lemmas": true,
        "out": "q_token_lemmas"
      },
      {
        "id": "vectorizer",
        "name": "tfidf_vectorizer",
        "in": "q_token_lemmas",
        "fit_on": ["q_token_lemmas"],
        "save_path": "autofaq/faq_vectorized.pkl",
        "load_path": "autofaq/faq_vectorized.pkl",
        "out": "q_vect"
      },
      {
        "name": "faq",
        "in": "q_vect",
        "fit_on": ["q_vect","y"],
        "save_path": "autofaq/faq_data.pkl",
        "load_path": "autofaq/faq_data.pkl",
        "vectorizer": "#vectorizer",
        "out": "answer"
      }
    ],
    "out": ["answer"]
  },

  "train": {
    "validate_best": false,
    "test_best": false
 }

}



