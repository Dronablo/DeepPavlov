{
  "dataset_reader": {
    "name": "ranking_negative_heli_reader",
    "data_path": "./heli_data"
  },
  "dataset_iterator": {
    "name": "ranking_iterator",
    "seed": 243,
    "random_batches": true,
    "batches_per_epoch": 100,
    "sample_candidates": "pool",
    "sample_candidates_valid": "pool",
    "sample_candidates_test": "pool",
    "hard_triplets": true,
    "num_positive_samples": 10,
    "num_negative_samples": 10,
    "num_ranking_samples_valid": 10,
    "num_ranking_samples_test": 10,
    "pos_pool_sample": true,
    "pos_pool_rank": false
  },
  "chainer": {
    "in": ["x"],
    "in_y": ["y"],
    "pipe": [
      {
        "in": ["x"],
        "in_y": ["y"],
        "out": ["y_predicted"],
        "name": "ranking_model",
        "device_num": 0,
        "train_now": true,
        "hard_triplets": true,
        "hardest_positives": false,
        "semi_hard": true,
        "vocab_name": "heli",
        "vocabs_path": "heli_data",
        "embeddings": "fasttext",
        "embeddings_path": "heli_embeddings/wiki.ru.bin",
        "embedding_dim": 300,
        "use_matrix": true,
        "seed": 243,
        "max_sequence_length": 47,
        "reccurent": "bilstm",
        "max_pooling": true,
        "type_of_weights": "shared",
        "hidden_dim": 300,
        "learning_rate": 1e-3,
        "distance": "euclidian",
        "margin": 0.5,
        "save_path": "heli_ranking/model_weights.h5",
        "load_path": "heli_ranking/model_weights.h5",
        "update_embeddings": "online",
        "interact_pred_num": 3
      }
    ],
    "out": ["y_predicted"]
  },
  "train": {
    "epochs": 200,
    "batch_size": 8,
    "pytest_max_batches": 2,
    "metrics": ["r@1", "r@5", "r@10", "rank_response", "loss"],
    "validation_patience": 10,
    "val_every_n_epochs": 1,
    "log_every_n_batches": 10
  },
  "metadata": {
    "labels": {
      "telegram_utils": "RankingModel",
      "server_utils": "Ranker"
    },
    "download": [
      {
        "url": "http://lnsigo.mipt.ru/export/embeddings/wiki.ru.bin",
        "subdir": "sber_faq_embeddings"
      }
    ]
  }
}